# Meshtastic Dashboard Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Configuration
FLASK_ENV=production
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production-use-python-secrets-token-hex-32

# Server Configuration
HOST=0.0.0.0
PORT=5000

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=msh/#
MQTT_CLIENT_ID=meshtastic-dashboard


# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/meshtastic-dashboard/app.log

# Security Configuration (optional)
# ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1

# Performance Configuration
WORKERS=4
WORKER_CONNECTIONS=1000
TIMEOUT=30

# Development Settings (set to false in production)
DEBUG=false
TESTING=false
